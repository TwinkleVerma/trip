<%= form_with model: @airline, url: admin_airlines_path, method: 'POST', multipart: true, local:true do |f| %>
  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.fields_for :airline_image_attributes do |ff| %>
        <%= ff.label :Profile_Image  %>
        <%= ff.file_field :picture, accept: 'image/jpeg, image/gif, image/png', class: "form-control" , id: "picture", autocomplete: "avatar", placeholder: "Profile Image"%>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.submit "create", class: "form-control btn-primary"%>
  </div>
<% end %>
