<div class="edit_form">
    <div class="form-group">
      <%= label_tag 'name', 'Name', class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= text_field_tag :name, @user.name, class: "form-control", readonly: 'readonly'%>
        </div>
    </div>
    <div class="form-group">
      <%= label_tag :contact, 'Contact', class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= text_field_tag :contact, @user.contact, class: "form-control", readonly: 'readonly'%>
        </div>
    </div>
    <div class="form-group">
      <%= label_tag :email, 'Email', class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= text_field_tag :email, @user.email , class: "form-control", readonly: 'readonly'%>
        </div>
    </div>
    <div class="form-group">
      <%= label_tag :role, 'Role', class: "col-sm-2 control-label" %>
        <% @user.roles.each do |role| %>
        <div class="col-sm-10">
          <%= text_field_tag role.name, role.name, class: "form-control", readonly: 'readonly'%>
        </div>
        <% end %>
    </div>
    <div class="row form-group user-flight">
       <%= render '/users/edit_partial'%>
    </div>
    <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-4 col-sm-2">
            <%= link_to 'Add Flight', airlines_path({user: @user.id}),  {remote: true, 'data-toggle': "modal", 'data-target': '#modal-window', class: 'btn btn-success btn-m'}  %>
            <div class="modal fade" id ="modal-window" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content"></div>
              </div>
            </div>
          </div>
        </div>
    </div>
</div>
