<div class="container-fluid">
  <h2 class="text-center text-primary">Sign up</h2>
  <div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: "form-inline registration-form", role: "from"}) do |f| %>
      <%= devise_error_messages! %>
      
      <div class="form-group">
        <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control", id: "name", autocomplete: "off"%>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "off", placeholder: "Email", class: "form-control",id: "email"%>
      </div>

      <div class="form-group">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control", id: "password" %>
      </div>     
      <%= f.submit "Sign up", class: "btn-field form-control btn-primary", id: "signup_btn" %>
    <% end %>
  </div>
</div>
