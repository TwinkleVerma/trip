<div class="container-fluid jumbotron page_padding">
  <h2 class="text-center text-primary">Complete <%= resource_name.to_s.humanize %> Profile</h2>
  <div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),id: "form",multipart: true, html: { method: :put, class: "form-horizontal edit-form", role: "from" }) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", disabled: "disabled"%>
      </div>
      <div class="form-group">
        <%= f.label :contact %>
        <%= f.text_field :contact, autofocus: true, autocomplete: "off", placeholder: "Contact", class: "form-control"%>
      </div>
      <div class="form-group">
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.fields_for :user_image_attributes do |ff| %>
            <%= ff.label :Profile_Image  %>
            <%= ff.file_field :picture, accept: 'image/jpeg, image/gif, image/png', class: "form-control" , id: "picture", autocomplete: "avatar", placeholder: "Profile Image"%>
        <% end %>    
      </div>
      <div class="form-group">
        <%= f.label :current_password %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.submit "Update", class: "form-control btn-primary", id: "edit_btn"%>
      </div>
    <% end %>
  </div>
</div>