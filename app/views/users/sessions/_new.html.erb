<div class="container-fluid">
  <h2 class="text-center text-primary">Log in</h2>
  <div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),html: {class: "form-inline login-form", role: "from"}) do |f| %>
      <div class="form-group">
        <%= f.text_field :login, placeholder: "Login Id", class: "form-control", id: "login", autocomplete: "off"%>
      </div>
      <div class="form-group">
        <%= f.password_field :password, placeholder: "Password", class: "form-control", id: "password",autocomplete: "off"%>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      <div class="form-group">
        <%= f.submit "Log in", class: "btn form-control btn-primary", id: "login_btn" %>
      </div>
    <% end %>
  </div>
</div>
