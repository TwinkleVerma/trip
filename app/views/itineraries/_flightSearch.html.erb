<div class="search_div">
	<%= form_tag('/itineraries', remote: true, method: 'GET', :html => {class: "form-vertical", role: "from"}) do |f| %>
	<div class="form-group">
		<div class="form-group inline-first">
      <input type="text" name="source" id="source" list="src" placeholder="Source" autocomplete="off">
        <datalist id="src">
          <% CS.states(:in).each do |key, value| %>
            <% CS.cities(key, :in).each do |key1, value1| %>
              <option value= <%= key1 %> >
            <% end %>
          <% end %>
        </datalist>
      </div>
      <div class="form-group inline-first">
      	<div><%= image_tag("/assets/wayto.png", size: "32") %></div>
      </div>
      <div class="form-group inline-first">
        <input type="text" name="destinition" id="destinition" list="des" placeholder="Destinition" autocomplete="off">
        <datalist id="des">
          <% CS.states(:in).each do |key, value| %>
            <% CS.cities(key, :in).each do |key1, value1| %>
              <option value= <%= key1 %> >
            <% end %>
          <% end %>
        </datalist>
      </div>
	</div>
	<div class="form-group">
        <%= date_field_tag :date, nil, class: "form-control date", required: "required", autocomplete: "off"%>
      </div>
      <div class="form-group">
        <%= button_tag "SEARCH", class: "btn form-control btn-primary", id: "search_btn" %>
      </div>
    <% end %>
</div>