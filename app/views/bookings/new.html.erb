<div class="containor-fluid booking  jumbotron">
  <h2 class="text-center text-primary">Booking Details</h2>
  <div class="form-horizontal">
    <div hidden="hidden">
      <input type="text" name="date" id="date" value="<%= @date %>">
      <input type="text" name="cost" id="cost" value="<%= @cost %>">
      <input type="text" name="schedule" id="schedule" value="<%= @schedule.id %>">
      <input type="text" name="user_id" id="user_id" value="<%= current_user.id %>">
    </div>
    <div>
    <h4>DEPARTURE : </h4>
    <div class="booking_details">
      <div class="inline">
        <%= image_tag(get_airline_logo(@flight), size: "32") %>
      </div>
      <div class="inline">
        <%= get_airline_name(@flight)%>
        <br>
        <%= @flight.number %>
      </div>
      <div class="inline">
        <%= @schedule.depart_time.strftime("%H:%M")%>
        <br>
        <%= @flight.source %>
      </div>
      <div class="inline">
        <%= image_tag("/assets/wayto.png", size: "32", id: "wayto") %>
      </div>
      <div class="inline">
        <%= @schedule.arrival_time.strftime("%H:%M") %>
        <br>
        <%= @flight.destinition %>
      </div>
      <div class="inline">
        <%= get_differnce_between_time(@schedule) %>
      </div>
    </div>
    <br>
    <div>
      <h4>FARE SUMMARY :</h4>
          <span class="bold">Total Fare Charged : </span><span class="cost bold"><%= "â‚¹ "+ @cost.to_s %></span>
    </div>
    <div class="form-group">
      <%= link_to "CONTINUE",'javascript:void(0)', class: "btn form-control btn-primary", id: "booking_btn" %>
    </div>
  </div>
</div>
